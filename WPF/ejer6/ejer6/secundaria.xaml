<Window x:Class="ejer6.Secundaria"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ejer6"
        mc:Ignorable="d"
        Title="Ventana Secundaria" Height="300" Width="300">
    <Grid Background="Coral">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="lbSecundario" Content="Elige una opción de Regreso" Grid.ColumnSpan="2" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0, 20, 0, 0" Height="50" FontWeight="Bold" FontSize="20"/>
        <Button x:Name="btPrimariaAntigua" Content="Primaria Antigua" Grid.Column="0" Height="40" FontWeight="Bold" FontSize="15" Margin="10, 10, 10, 10" Click="btPrimariaAntigua_Click" />
        <Button x:Name="btPrimariaNueva" Content="Primaria Nueva" Grid.Column="1" Height="40" FontWeight="Bold" FontSize="15" Margin="10, 10, 10, 10" Click="btPrimariaNueva_Click" />
    </Grid>
</Window>
